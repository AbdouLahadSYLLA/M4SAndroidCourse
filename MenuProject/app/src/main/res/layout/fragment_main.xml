<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lahad.menuproject.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:background="@color/highlighted_text_material_dark">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:id="@+id/sms_id"
        android:drawableLeft="@android:drawable/sym_action_chat"
        android:background="@color/accent_material_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONE"
        android:id="@+id/phone_id"
        android:layout_below="@+id/sms_id"
        android:layout_alignParentStart="true"
        android:drawableLeft="@android:drawable/stat_sys_phone_call"
        android:background="@color/accent_material_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEB"
        android:id="@+id/web_id"
        android:layout_below="@+id/phone_id"
        android:layout_alignParentStart="true"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:background="@color/accent_material_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAP"
        android:id="@+id/map_id"
        android:layout_below="@+id/web_id"
        android:layout_alignParentStart="true"
        android:drawableLeft="@android:drawable/ic_menu_mylocation"
        android:background="@color/accent_material_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:id="@+id/share_id"
        android:layout_below="@+id/map_id"
        android:layout_alignParentStart="true"
        android:drawableLeft="@android:drawable/ic_menu_share"
        android:background="@color/accent_material_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW ACTIVITY"
        android:id="@+id/new_id"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:background="@color/accent_material_dark"
        android:layout_below="@+id/share_id"
        android:layout_alignParentStart="true" />

</RelativeLayout>
